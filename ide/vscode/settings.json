{
    "editor.minimap.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "afterDelay",
    "html.autoClosingTags": false,
    // Extensions
    "liveServer.settings.donotShowInfoMsg": true,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        //"editor.formatOnType": true,
        "editor.formatOnSave": true,
        //"editor.formatOnSaveMode": "file"
    },
    //"rust-analyzer.rustfmt.enableRangeFormatting": true,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    // vim
    // https://marketplace.visualstudio.com/items?itemName=vscodevim.vim#mac
    // Toggle inlay hints   
    // ctrl + k and ctrl + i for showing docs (gh for vim extension)    
    "vim.easymotion": true,
    "vim.foldfix" : true, // https://github.com/VSCodeVim/Vim#-faq
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.leader": "<space>",
    "vim.startInInsertMode" : false,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-c>": false,
        "<C-x>": false,
        //"<C-f>": false,
        //"<C-k>": false
    },
    // Only if required
    "vim.hlsearch": false,
    // "vim.normalModeKeyBindingsNonRecursive": [
    //     {
    //       "before": ["K"],
    //       "commands": ["editor.action.showHover"]
    //     },
    // ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],    
    "[python]": {
        "editor.formatOnType": true
    },
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": false,
        "tfvars": "false",
        "conf": "false"
    },
    "workbench.startupEditor": "none",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "git.openRepositoryInParentFolders": "always",
    "editor.accessibilitySupport": "off",
    "terminal.integrated.macOptionIsMeta": true,
    "editor.fontSize": 14,
    "editor.fontFamily": "Hack Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "hediet.vscode-drawio.resizeImages": null,
    "window.zoomLevel": 2,
    "liveServer.settings.donotVerifyTags": true,
    "go.toolsManagement.autoUpdate": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.advanced": {
    },
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/publish": true
    },
    "editor.stickyScroll.enabled": false,
    "workbench.editor.editorActionsLocation": "titleBar",
    "lldb.suppressUpdateNotifications": true,
    "hediet.vscode-drawio.theme": "dark",
    "database-client.autoSync": true
}
